{% extends 'base.jinja' %}
{% block content %}

  <h1>{{ question.prompt }}</h1>

  <form action="/answer/{{ id }}" method="POST"> {# remove the param #}

    {% for choice in question.choices %}
      <p>
        <input
            type="radio"
            name="answer"
            value="{{ choice }}"
            required>
          {{ choice }}
      </p>

      {% endfor %}

    <button>Continue</button>
  </form>

{% endblock %}
